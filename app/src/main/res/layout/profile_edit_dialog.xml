    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:background="@drawable/custom_shape_registrationform"


        >

        <TextView
            android:id="@+id/EditProfile_form_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/coda"
            android:text="EDIT PROFILE FORM"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_edit_profile"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_below="@+id/EditProfile_form_text"
            android:foregroundGravity="center"
            android:scaleType="fitXY"

            android:src="@drawable/profile_img"
            app:shapeAppearanceOverlay="@style/circleImageViewStyle"

            android:layout_centerHorizontal="true"

            />

        <TextView
            android:id="@+id/tv_updateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_edit_profile"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Update Profile"

            android:textSize="@dimen/_16sdp"
            android:layout_centerHorizontal="true"

            />


        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/tv_updateProfile"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_text"
            android:hint="Full Name"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="#61000000"
            android:textColorHint="#61000000"
            android:textSize="@dimen/_14sdp" />


        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/editTextName"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_text"
            android:hint="Email Address"
            android:paddingStart="@dimen/_14sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="#61000000"
            android:textColorHint="#61000000"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@id/editTextEmail"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_text"
            android:hint="City Area"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="#61000000"
            android:textColorHint="#61000000" />

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/editTextState"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/editTextCity"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:background="#CAF1FF"
            android:gravity="center_vertical"
            android:hint="State"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="#61000000"
            android:textColorHint="#61000000"
            android:textSize="@dimen/_14sdp"
            app:spinner_arrow_tint="@color/black"
            app:spinner_divider_color="@color/black"
            app:spinner_item_height="@dimen/_46sdp"
            app:spinner_popup_max_height="120dp" />


        <com.skydoves.powerspinner.PowerSpinnerView

            android:id="@+id/editTextDistrict"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/editTextState"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:background="#CAF1FF"
            android:gravity="center_vertical"
            android:hint="District"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="#61000000"
            android:textColorHint="#61000000"
            android:textSize="@dimen/_14sdp"
            app:spinner_arrow_show="true"
            app:spinner_arrow_tint="@color/black"
            app:spinner_divider_color="@color/black"
            app:spinner_item_height="@dimen/_46sdp"
            app:spinner_popup_max_height="@dimen/_120sdp" />


        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextDistrict"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_30sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>


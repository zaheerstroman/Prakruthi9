<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:background="@drawable/custom_edit_text"
    android:backgroundTint="@color/Secondary"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/wishlist_product_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/platic_glass"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/wishlist_product_name"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Plastic Glass"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:layout_below="@+id/wishlist_product_image"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever" />

    <TextView
        android:id="@+id/wishlist_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_toEndOf="@+id/wishlist_product_image"
        android:gravity="center"
        android:text="3237"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:layout_centerVertical="true"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/wishlist_product_add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:text="Add to Cart"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:background="@drawable/button_bg_curve"
        android:backgroundTint="#E656AEFF"
        />

    <ImageView
        android:id="@+id/wishlist_product_delete"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/bin"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/wishlist_product_added_date"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="viewEnd"
        android:text="Added on "
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_edit_text"
    android:backgroundTint="@color/Secondary_less"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    >

    <TextView
        android:id="@+id/myAddresses_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginStart="@dimen/_10sdp"
        android:singleLine="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/coda"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"

        />


    <TextView
        android:id="@+id/txt_personal_my_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full address"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/coda"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:layout_below="@+id/myAddresses_Name"
        />

    <TextView
        android:id="@+id/txt_personal_my_address_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/coda"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:layout_below="@+id/txt_personal_my_address"
        />

    <TextView
        android:id="@+id/txt_personal_my_address_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/coda"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:layout_below="@+id/txt_personal_my_address_state"
        />

    <ImageView
        android:id="@+id/iv_edit_yourAddress"
        android:layout_width="40dp"
        android:layout_height="26dp"
        android:layout_gravity="top"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/myAddresses_Name"
        android:src="@drawable/edit_icon"
        android:visibility="gone"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/txt_remove"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Remove"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:background="@drawable/button_bg_curve"
        android:backgroundTint="#E656AEFF"
        />



</RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_26sdp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/iv_back"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_3sdp"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_145sdp"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_shape_registrationform">

        <TextView
            android:id="@+id/EditProfile_form_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/coda"
            android:text="EDIT PROFILE FORM"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"/>


        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/EditProfile_form_text"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_text"
            android:hint="Full Name"
            android:paddingStart="@dimen/_15sdp"
            android:singleLine="true"
            android:textColor="#61000000"
            android:paddingEnd="@dimen/_5sdp"
            android:textColorHint="#61000000"
            android:textSize="@dimen/_14sdp" />


<!--        <EditText-->
<!--            android:id="@+id/edittext_phone_number"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_38sdp"-->
<!--            android:layout_below="@+id/edittext_full_name"-->
<!--            android:layout_marginStart="@dimen/_26sdp"-->
<!--            android:layout_marginTop="@dimen/_8sdp"-->
<!--            android:layout_marginEnd="@dimen/_26sdp"-->

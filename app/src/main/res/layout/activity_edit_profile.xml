<!--            android:textColor="#61000000"-->
<!--            android:paddingEnd="@dimen/_5sdp"-->
<!--            android:textColorHint="#61000000"-->
<!--            android:textSize="@dimen/_14sdp" />-->



        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/et_first_name"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_text"
            android:hint="Email Address"
            android:paddingStart="@dimen/_14sdp"
            android:singleLine="true"
            android:textColor="#61000000"
            android:paddingEnd="@dimen/_5sdp"
            android:textColorHint="#61000000"
            android:textSize="@dimen/_14sdp" />


        <EditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@id/et_email"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_text"
            android:hint="City Area"
            android:paddingStart="@dimen/_15sdp"
            android:singleLine="true"
            android:textColor="#61000000"
            android:paddingEnd="@dimen/_5sdp"
            android:textColorHint="#61000000" />

<!--        android:layout_toStartOf="@+id/District_DropDown"-->

        <Spinner
            android:id="@+id/spinner_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/et_city"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:background="#CAF1FF"
            android:gravity="center_vertical"
            android:hint="State"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="#61000000"
            android:textColorHint="#61000000"
            android:textSize="@dimen/_14sdp"
            app:spinner_arrow_tint="@color/black"
            app:spinner_divider_color="@color/black"
            app:spinner_item_height="@dimen/_46sdp"
            app:spinner_popup_max_height="120dp" />

        <Spinner
            android:id="@+id/spinner_district"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/spinner_state"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:background="#CAF1FF"
            android:gravity="center_vertical"
            android:hint="District"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="#61000000"
            android:textColorHint="#61000000"
            android:textSize="@dimen/_14sdp"
            app:spinner_arrow_show="true"
            app:spinner_arrow_tint="@color/black"
            app:spinner_divider_color="@color/black"
            app:spinner_item_height="@dimen/_46sdp"
            app:spinner_popup_max_height="@dimen/_120sdp" />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RememberMe"
            android:layout_below="@id/spinner_district"
            android:layout_marginTop="@dimen/_21sdp"
            android:text="Remember Me"
            android:layout_marginStart="@dimen/_17sdp"
            />



        <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_bg_curve"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_30sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@id/RememberMe"
                android:layout_centerHorizontal="true"

                />

    </RelativeLayout>

</RelativeLayout>

